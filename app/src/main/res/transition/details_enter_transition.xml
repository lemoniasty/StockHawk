<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500"
    android:transitionOrdering="together">

    <fade>
        <targets>
            <target android:excludeId="@android:id/statusBarBackground" />
            <target android:excludeId="@android:id/navigationBarBackground" />
            <target android:excludeId="@id/tv_price" />
            <target android:excludeId="@id/tv_change_absolute" />
            <target android:excludeId="@id/tv_change_percentage" />
        </targets>
    </fade>

    <slide android:slideEdge="end">
        <targets>
            <target android:targetId="@id/history_graph_card" />
        </targets>
    </slide>

    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/history_data_card" />
        </targets>
    </slide>
</transitionSet>